<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>

    <main>
    <%- include('../includes/navigation.ejs') %>

    <div class="centered">
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>

        <form action="/signup" method="POST" class="post-form" novalidate>
            <div class="form-group">
                <label for="name">Name</label>
                <input 
                    class="form-control centered" style="width: 25rem;"
                    type="text" 
                    name="name" 
                    id="name"
                    value="<%= oldInput.name %>" >
            </div>
            <div class="form-group">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %> form-control centered" style="width: 25rem;"
                    type="email" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %> form-control centered" style="width: 25rem;"
                    type="password" 
                    name="password" 
                    id="password"
                    value="<%= oldInput.password %>">
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %> form-control centered" style="width: 25rem;"
                    type="password" 
                    name="confirmPassword" 
                    id="confirmPassword" 
                    value="<%= oldInput.confirmPassword %>">
            </div>
    
            <button class="btn btn-success" type="submit">Signup</button>
    
        </form>
    </div>

        
    </main>
<%- include('../includes/end.ejs') %>